<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{% block title %}Irena{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('asset/css/app.css') }}">
        {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}

    {% block javascripts_header %}
        {#{{ encore_entry_script_tags('app') }}#}
    {% endblock %}
</head>
<body>
{% block javascripts_begin %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
{% endblock %}
{% block menu %}
    <nav
            class="navbar navbar-expand-lg navbar-light bg-light"
    >
        <a class="navbar-brand" href="#">Irena</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_index') }}">Lista państw</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">Lista użytkowników</a>
                </li>
                {%  if is_granted('ROLE_UADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="#">Panel admina</a>
                    </li>
                {% endif %}
            </ul>

            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}

            {% endif %}

        </div>
        <div class="right-menu">
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <div class="dropdown">
                    <button class="btn dropdown-toggle mr-4"
                            type="button"
                            data-toggle="dropdown"
                            aria-haspopup="true"
                            aria-expanded="false"
                    >
                        <img
                                src="{{ app.user.avatarUrl }}"
                                alt="{{ app.user.firstName }} {{ app.user.lastName }} Avatar">
                    </button>

                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Mój Profil</a>
                        <a class="dropdown-item" href="#">Ustawienia konta</a>
                        <a class="dropdown-item" href="#">Wyloguj</a>
                    </div>

                </div>
            {% else %}
                <a class="nav-link login" href="#">Zaloguj się</a>
                <a class="nav-link sign-up" href="{{ path('app_sign_up') }}">Rejestracja</a>
            {% endif %}
        </div>
    </nav>
{% endblock %}
{% block body %}{% endblock %}

{% block javascripts_end %}{% endblock %}
</body>
</html>
